<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Details"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:textColor="#011a58"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Enter your Name"
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="text"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/Email"
        android:hint="Enter your E-mail Id"
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/UserPass"
        android:hint="Enter your Password"
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/ConUserPass"
        android:hint="Confirm Password"
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/AltEmail"
        android:hint="Enter your Alternate E-Mail Id"
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/Addr"
        android:hint="Enter your Address"
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="text"
        />
    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/PhNo"
        android:hint="Enter your Ph. No."
        android:layout_marginBottom="10sp"
        android:textColorHint="#d7d7d7"
        android:layout_gravity="center"
        android:inputType="number"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/user"
            android:id="@+id/ImgVw"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:id="@+id/UpImage"
            android:padding="7dp"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:layout_gravity="center"
        android:id="@+id/SignIn"
        android:background="#ececec"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="30dp"
        android:padding="7dp"
        />
</LinearLayout>
    </ScrollView>