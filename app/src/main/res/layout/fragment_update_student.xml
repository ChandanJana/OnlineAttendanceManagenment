<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chandan.theprofessional.UpdateStudent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/StuImage"
            android:src="@drawable/user"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuName"
                android:focusable="false"
                android:singleLine="true"
                app:layout_constraintRight_toLeftOf="@+id/EditName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/StuImage" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/edit_background"
                android:id="@+id/EditName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/StuName"
                android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/StuName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linear"
            android:weightSum="100">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuClass"
                android:focusable="false"
                android:singleLine="true"
                android:layout_weight="60"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/edit_background"
                android:id="@+id/EditClass"
                android:layout_weight="0"
                 />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuBatch"
                android:focusable="false"
                android:singleLine="true"
                android:layout_weight="40"
                 />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/edit_background"
                android:id="@+id/EditBatch"
                android:layout_weight="0" />
        </LinearLayout>


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mob"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuMob"
                android:focusable="false"
                android:singleLine="true"
                app:layout_constraintRight_toLeftOf="@+id/EditMob"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linear"
                app:layout_constraintHorizontal_bias="0.0" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/edit_background"
                android:id="@+id/EditMob"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="@+id/StuMob"
                app:layout_constraintVertical_bias="0.555"
                app:layout_constraintBottom_toBottomOf="@+id/StuMob" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fees"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuFees"
                android:focusable="false"
                android:singleLine="true"
                app:layout_constraintRight_toLeftOf="@+id/EditFees"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/StuMob" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/edit_background"
                android:id="@+id/EditFees"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="@+id/StuFees"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintBottom_toBottomOf="@+id/StuFees" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuAddr"
                android:focusable="false"
                android:singleLine="true"
                app:layout_constraintRight_toLeftOf="@+id/EditAddr"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/StuFees"
                app:layout_constraintHorizontal_bias="0.0" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/edit_background"
                android:id="@+id/EditAddr"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/StuAddr"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="@+id/StuAddr"
                app:layout_constraintVertical_bias="1.0" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="22sp"
                android:textColor="#02be1f"
                android:id="@+id/StuEmail"
                android:focusable="false"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/StuAddr"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        <Button
            android:layout_width="368dp"
            android:layout_height="50dp"
            android:text="UPDATE"
            android:visibility="invisible"
            android:id="@+id/EditUpdate"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/StuEmail"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>